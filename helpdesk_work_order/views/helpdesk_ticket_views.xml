<?xml version='1.0' encoding='utf-8'?>
<odoo>

<record id="view_helpdesk_work_order_form" model="ir.ui.view">
<field name="name">view.helpdesk_work_order.form</field>
<field name="model">helpdesk.ticket</field>
<field name='inherit_id' ref='helpdesk.ticket_view_form'/>
<field name="arch" type="xml">
    <xpath expr="/form/header" position="inside">
        <button name="action_create_work_order" string="Create Work Order" type="object"  class="btn-primary"/>
    </xpath>
    <xpath expr="//h1//field[@name='number']" position="after">
      <div class="oe_button_box" name="button_box">
        <button name="action_view_work_order_id" type="object" String="Work order" attrs="{'invisible': [('work_order_id', '=', False)]}" class="oe_stat_button" icon="fa-pencil-square-o">
          <field name="work_order_id" widget="statinfo" string="Work order"/>
        </button>
      </div>
    </xpath>
    <!-- <field name="tag_ids" position="after">
        <field name="work_order_id" attrs="{'invisible': [('work_order_id', '=', False)]}"/>
    </field> -->
</field>
</record>

</odoo>
